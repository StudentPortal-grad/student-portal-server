{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@repositories/*": [
        "repositories/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@middleware/*": [
        "middleware/*"
      ],
      "@validators/*": [
        "validators/*"
      ],
      "@validations/*": [
        "validations/*"
      ],
      "@models/*": [
        "models/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist"
  ]
}