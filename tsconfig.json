{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@repositories/*": [
        "repositories/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@middleware/*": [
        "middleware/*"
      ],
      "@validators/*": [
        "validators/*"
      ],
      "@validations/*": [
        "validations/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@queues/*": [
        "queues/*"
      ],
      "@workers/*": [
        "workers/*"
      ]
    }
  },
  "include": [
    "src",
    "__tests__"
  ],
  "exclude": [
    "dist"
  ]
}